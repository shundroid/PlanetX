doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width,inital-scale=1.0")
    title Planet
    link(rel="stylesheet", href="bower_components/balloon/balloon.css")
    link(rel="stylesheet", href="lib/fontawesome/css/font-awesome.css")
    link(rel="stylesheet", href="css/ui.css")
    script(type='text/javascript', src='js/all.js')
  body
    .loading
    canvas#pla-canvas(width='300', height='200')
    .pla-inspector
      button#ins-close.pla-btn.ev-btn(data-listener="closeInspector") &times;
      .ins-article#ins-io
        h1 Import / Export
        .ins-content
          textarea#pla-io.ev-input(data-default="")
          .pla-btngroup
            button.pla-btn.bl.bl-top.ev-btn#io-export(data-bl="Export", data-listener="clickExport"): i.fa.fa-upload
            button.pla-btn.bl.bl-top.ev-btn#io-import(data-bl="Import", data-listener="clickImport"): i.fa.fa-download
      .ins-article#ins-inspector
        h1 Inspector
        .ins-content
          ul
            li: button.pla-btn.ins-show-btn(data-ins="stage-effect") Stage Effect
            li: button.pla-btn.ins-show-btn(data-ins="io") Import / Export
            li: button.pla-btn.ins-show-btn(data-ins="conv-old-file") Convert old file
            li: button.pla-btn.ins-show-btn(data-ins="preferences") Editor Preferences
          // stageLayer用
          | Active Layer:&nbsp;
          input.ev-input#slayer-active-number(type="number", data-default="0", min="0", data-change="changeActiveStageLayer")
          span#pla-ver
      .ins-article#ins-conv-old-file
        h1 Convert old file
        .ins-content
          | Old:
          br
          textarea#conv-old.ta-no-resize.ev-input(data-default="")
          | New:
          br
          textarea#conv-new.ta-no-resize.ev-input(readonly, data-default="")
          div: button.pla-btn.bl.bl-top.ev-btn#conv(data-bl="convert", data-listener="clickConvertOldFile"): i.fa.fa-exchange
      .ins-article#ins-stage-effect
        h1 Stage Effect
        .ins-content
          ul
            li
              | Skybox:
              select.pack-select.ev-input#stg-skybox(data-items="skyboxes", data-change="changeSkybox")
      .ins-article#ins-preferences
        h1 Editor Preferences
        .ins-content
      .ins-article#ins-edit-block
        h1 Edit a Block
        .ins-content
          span#ed-name: br
          span#ed-pos: br
          span#ed-id: br
          .pla-btngroup
            // select.ed-attr.pack-select.ev-input(data-items="attributes")
            button.pla-btn.ev-btn(data-listener="clickAddAttr"): i.fa.fa-plus
          .ed-attr-view
    footer.pla-footer
      .tray
        button.pla-btn.ev-btn#tray-fullscreen(data-listener="clickedToggleFullscreen") ↑
        .tray-items
          .tray-list.tray-list-tool.tool-active(data-toolname='pencil')
            i.fa.fa-pencil
          .tray-list.tray-list-tool(data-toolname='brush')
            i.fa.fa-paint-brush
          .tray-list.tray-list-tool(data-toolname='erase')
            i.fa.fa-eraser
          .tray-list.tray-list-tool(data-toolname='hand')
            i.fa.fa-hand-paper-o
          .tray-list.tray-list-tool(data-toolname='choice')
            i.fa.fa-eyedropper
          .tray-list.tray-list-tool(data-toolname='edit')
            i.fa.fa-list
          .tray-list.tray-list-tool.tool-btn(data-toolname='io')
            i.fa.fa-floppy-o
          .tray-list.tray-list-tool.tool-btn(data-toolname='setting')
            i.fa.fa-cog